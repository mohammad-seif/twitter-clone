extends layouts/login-layout.pug

block content
    .loginContainer
        h1 Register 
        form#form(method="post", onsubmit='event.preventDefault(); validateForm();')

            p.errorMessage #{errorMessage}

            input(type="text", name="firstName", placeholder='First name', required='')
            input(type="text", name="lastName", placeholder='Last name', required='')
            input(type="text", name="username", placeholder='Username', required='')
            input(type="email", name="email", placeholder='Email', required='')
            input#password(type="password", name="password", placeholder='Password', required='')
            input#passwordConf(type="password", name="passwordConf", placeholder='Confirm password', required='')
            input(type="submit", value="Login")

        a(href="/login") Already have and account? Login here.
    script.
        var pwField = document.getElementById('password')
        var pwFieldConf = document.getElementById('passwordConf')
        var form = document.getElementById('form')
        function validateForm() {
            if(pwField.value != pwFieldConf.value) {
                alert('Passwords do not match')
            } else {
                form.submit()
            }
        }      